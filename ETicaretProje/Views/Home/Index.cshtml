@using ETicaretProje.Models;

@{
    ViewBag.Title = "ETicaret Projesi";
    IEnumerable<Kategoriler> KategoriListesi = ViewBag.KategoriListesi as IEnumerable<Kategoriler>;
    IEnumerable<Urunler> SonUrunler = ViewBag.SonUrunler as IEnumerable<Urunler>;
}

<div class="jumbotron">
    <h1>ETicaret Projesi</h1>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Kategoriler</h2>
        <ul>
            @foreach (var item in KategoriListesi)
            {
                <li>@Html.ActionLink(item.KategoriAdi,"Kategori",new {id=item.KategoriID})</li>
            }
        </ul>
    </div>
    <div class="col-md-9">
            @foreach (var item in SonUrunler)
            {
        <div class="col-md-4" style="border:1px solid black;margin:5px;">
            <a href="@Url.Action("Urun","Home", new { id = item.UrunID })">

                <h5>@item.UrunAdi</h5>
                <img src="~/Resim/@(item.UrunID).jpg" style="max-width:100%;" />
                <p>
                    <a class="btn btn-default" href="@Url.Action("Urun","Home", new { id = item.UrunID })">Ürün Detay</a>
                    <span style="color:red;font-weight:bold;font-size:16px;">@item.UrunFiyati TL</span>
                </p>
            </a>
        </div>
            }
    </div>
</div>